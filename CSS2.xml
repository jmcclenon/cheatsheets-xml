    <section title="Selectors">
        <item>
            <code>*</code>
            <text pos="right">All elements</text>
        </item>
        <item>
            <code>div</code>
            <text pos="right">&lt;div&gt;</text>
        </item>
        <item>
            <code>div *</code>
            <text pos="right">All elements within &lt;div&gt;</text>
        </item>
        <item>
            <code>div span</code>
            <text pos="right">&lt;span&gt; within &lt;div&gt;</text>
        </item>
        <item>
            <code>div, span</code>
            <text pos="right">&lt;div&gt; and &lt;span&gt;</text>
        </item>
        <item>
            <code>div &gt; span</code>
            <text pos="right">&lt;span&gt; with parent &lt;div&gt;</text>
        </item>
        <item>
            <code>div + span</code>
            <text pos="right">&lt;span&gt; preceded by &lt;div&gt;</text>
        </item>
        <item>
            <code>.class</code>
            <text pos="right">Elements of class "class"</text>
        </item>
        <item>
            <code>div.class</code>
            <text pos="right">&lt;div&gt; of class "class"</text>
        </item>
        <item>
            <code>#itemid</code>
            <text pos="right">Element with id "itemid"</text>
        </item>
        <item>
            <code>div#itemid</code>
            <text pos="right">&lt;div&gt; with id "itemid"</text>
        </item>
        <item>
            <code>a[attr]</code>
            <text pos="right">&lt;a&gt; with attribute "attr"</text>
        </item>
        <item>
            <code>a[attr='x']</code>
            <text pos="right">&lt;a&gt; when "attr" is "x"</text>
        </item>
        <item>
            <code>a[class~='x']</code>
            <text pos="right">&lt;a&gt; when class is a list containing 'x'</text>
        </item>
        <item>
            <code>a[lang|='en']</code>
            <text pos="right">&lt;a&gt; when lang begins "en"</text>
        </item>
    </section>
